<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="180dp"
    android:layout_marginEnd="12dp"
    app:cardBackgroundColor="#E8F9FF"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- News Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <ImageView
                android:id="@+id/newsImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/search_background_light" />

        </androidx.cardview.widget.CardView>

        <!-- Breaking News Indicator -->
        <TextView
            android:id="@+id/breakingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="12dp"
            android:background="@drawable/breaking_news_background_light"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp"
            android:text="BREAKING"
            android:textColor="#ffffff"
            android:textSize="9sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- Bookmark Icon -->
        <androidx.cardview.widget.CardView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="12dp"
            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/bookmarkIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/ic_bookmark_outline"
                app:tint="#1976D2" />

        </androidx.cardview.widget.CardView>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/imageCard"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Category and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/categoryTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Academic"
                    android:textColor="#4A90E2"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2h ago"
                    android:textColor="#999999"
                    android:textSize="10sp" />

            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Faculty Cricket Tournament 2023 Begins"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                android:lineSpacingExtra="1dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>